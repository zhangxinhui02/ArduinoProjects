    temp=tfont16[t+32*FontPos];                    
    for(t1=0;t1<8;t1++)
    {
        if(temp&0x80)
              { 
                myGLCD.setColor(255, 0, 0);//FontColor
                myGLCD.drawPixel(x,y);
              }
        else 
              { 
                myGLCD.setColor(0, 0, 0);//BackColor
                myGLCD.drawPixel(x,y);
              }

        temp<<=1;
        y++;
        if((y-y0)==16)
        {
    y=y0;
    x++;
    break;
        }
       
